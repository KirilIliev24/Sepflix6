@page "/moviecontainer"
@using SEP6_TEST.Models;
@using SEP6_TEST.DTO;


<div class="card text-white bg-transparent border-info mb-3" style="width: 18rem;">
    <img class="card-img-top" src="/Images/diesel.png" alt="Movie Image">
    <div class="card-body">
        <h5 class="card-title">@movie.Movie.Title</h5>
    </div>
    <div class="card-footer bg-transparent border-info">
        <h6>Year: @movie.Movie.Year</h6>
        <h6>Rating: @movie.Rating.Rating1 Rating1/10 out of @movie.Rating.Votes ratings</h6>
    </div>
</div>


@code {
    [Parameter] public MovieDTO movie { get; set; }
    
}
