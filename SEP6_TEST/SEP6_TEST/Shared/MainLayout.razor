@inherits LayoutComponentBase

@using DbAccess
@inject IUserDb user

@if (!string.IsNullOrEmpty(user.user.Username))
{
    <div class="sidebar" hidden="@NavMenuHide">
        <NavMenu />
    </div>
}


<div class="main">


    <div class="content px-4">
        @Body
    </div>
</div>


