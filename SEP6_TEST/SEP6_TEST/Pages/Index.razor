@page "/"
@using SEP6_TEST.Components;




<div class="container p-5">

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Welcome to SepFlix!</h1>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" hidden="@HideLogin">
            <Login>

            </Login>
        </div>
        <div class="col-md-12" hidden="@HideRegister">
            <Register>

            </Register>
        </div>
    </div>


    <div class="row mt-5">
        <div class="card bg-info w-25 mx-auto mb-t">
            <div class="card-body">
                <div class="text-nowrap">
                    <p class="text-center">Switch to</p>
                </div>
                <div class="text-center align-items-center">
                    @if (wantToLogin == false)
                    {

                        <button class="btn btn-primary" @onclick="SwitchForm">Register</button>
                    }
                    else
                    {
                        <button class="btn btn-primary" @onclick="SwitchForm">Login</button>
                    }
                </div>
            </div>
        </div>

    </div>
</div>



@code 
{
    private bool wantToLogin = false;
    private bool wantToRegister = true;

    private string HideLogin => wantToLogin ? "hidden" : null;
    private string HideRegister => wantToRegister ? "hidden" : null;


    void SwitchForm()
    {
        wantToLogin = !wantToLogin;
        wantToRegister = !wantToRegister;
    }
}

